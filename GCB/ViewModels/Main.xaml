    	<Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="160" VerticalAlignment="Top" Width="200" Background="AntiqueWhite">
    		<Image Source="Logo3.png" Stretch="Fill" Width="153.6" Height="153.6" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    	</Grid>
        <Grid Grid.Column="2" HorizontalAlignment="Left" Height="160" VerticalAlignment="Top" Width="1166">
