    	</Grid>
    	<Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="618" Margin="0,0,0,-2" Grid.Row="1" VerticalAlignment="Top" Width="200">
    		<Grid.RowDefinitions>
    			<RowDefinition Height="110"/>
    			<RowDefinition Height="100"/>
    			<RowDefinition Height="100"/>
    			<RowDefinition Height="150"/>
    			<RowDefinition/>
    		</Grid.RowDefinitions>
    		<Button Content="Button" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Bottom" Width="200" Height="100" Background="#FF441C1C"/>
    		<Button Content="Button" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="200" Height="100" Background="#FF3E1919" Grid.Row="1" Grid.ColumnSpan="3"/>
    		<Button Content="Button" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="200" Height="100" Background="#FF301818" Grid.Row="2"/>
    	</Grid>
        <Frame Content="Frame" Grid.Column="2" HorizontalAlignment="Left" Margin="20,20,0,0" Grid.Row="1" VerticalAlignment="Top" Height="500" Width="650"/>

    </Grid>
</Page>
